@page
@model WeMarket.ServiceHost.Pages.AccountModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> حساب کاربری </title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/Login/css/style.css">

    <!-- Boxicons CSS -->
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

</head>
<body>
    <section class="container forms">
        <div class="form login">
            <div class="form-content">
                <header>ورود به حساب کاربری</header>
                <form asp-page-handler="Login">
                    <div class="field input-field">
                        <input type="text" placeholder="نام کاربری" class="input" name="Username">
                    </div>

                    <div class="field input-field">
                        <input type="password" placeholder="رمز عبور" class="password" name="Password">
                        <i class='bx bx-hide eye-icon'></i>

                    </div>

                    <div class="form-link">
                        <a href="#" class="forgot-pass">رمز عبور را فراموش کردید؟</a>
                    </div>

                    <div class="field button-field">
                        <button>ورود به حساب</button>
                    </div>
                </form>

                <div class="form-link">
                    <span>حساب کاربری ندارید؟<a href="#" class="link signup-link"> ایجاد حساب کاربری </a></span>
                </div>
            </div>

            <div class="line"></div>
            @if (Model.LoginMessage != null)
            {
                <div class="alert alert-danger">@Model.LoginMessage</div>
            }
            <div class="media-options">
                <a href="#" class="field google">
                    <img src="~/Login/images/google.png" alt="google" class="google-img">
                    <span>ورود با حساب گوگل</span>
                </a>
            </div>

        </div>

        <!-- Signup Form -->

        <div class="form signup">
            <div class="form-content">
                <header>ساخت حساب کاربری</header>
                <form asp-page-handler="Register">
                    <div class="field input-field">
                        <input type="text" placeholder="نام کامل" class="input" name="Fullname">
                    </div>

                    <div class="field input-field">
                        <input type="text" placeholder="نام کاربری" class="input" name="Username">
                    </div>

                    <div class="field input-field">
                        <input type="password" placeholder="رمز عبور" class="Password" name="Password">
                    </div>

                    <div class="field button-field">
                        <button>ایجاد حساب</button>
                    </div>
                </form>

                <div class="form-link">
                    <span>آیا حساب کاربری دارید؟ <a href="#" class="link login-link">ورود به حساب کاربری</a></span>
                </div>
            </div>

            <div class="line"></div>
            @if (Model.RegisterMessage != null)
            {
                <div class="alert alert-danger">@Model.RegisterMessage</div>
            }
            <div class="media-options">
                <a href="#" class="field google">
                    <img src="~/Login/images/google.png" alt="google" class="google-img">
                    <span>ورود با حساب گوگل</span>
                </a>
            </div>

        </div>
    </section>

    <!-- JavaScript -->
    <script src="~/Login/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
