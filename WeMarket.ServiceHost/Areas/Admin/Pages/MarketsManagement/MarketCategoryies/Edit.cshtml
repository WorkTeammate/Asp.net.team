@using ShopsManagement.Application.Contracts.MarketCategories

@model EditMarketCategory
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش دسته بندی: @Model.Name</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            @* Name  *@
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">نام دسته بندی</label>
                    <input type="text" class="form-control" asp-for="Name" onchange="makeSlug('Name', 'Slug')">
                    <span asp-validation-for="Name" class="error"></span>
                </div>
            </div>
            @* picture  *@
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Picture" class="control-label">آدرس عکس</label>
                    <input type="text" class="form-control" asp-for="Picture">
                    <span asp-validation-for="Picture" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            @* pictureAlt  *@
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="PictureAlt" class="control-label">Alt عکس</label>
                    <input type="text" class="form-control" asp-for="PictureAlt">
                    <span asp-validation-for="PictureAlt" class="error"></span>
                </div>
            </div>

            @* pictureTitle  *@
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="PictureAlt" class="control-label">تایتل عکس</label>
                    <input type="text" class="form-control" asp-for="PictureAlt">
                    <span asp-validation-for="PictureAlt" class="error"></span>
                </div>
            </div>

            @* kewWords  *@
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="KeyWords" class="control-label">کلمات کلیدی</label>
                    <input type="text" class="form-control" asp-for="KeyWords">
                    <span asp-validation-for="KeyWords" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            @* Description  *@
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="Description" class="control-label">توضیحات</label>
                    <textarea class="form-control autogrow" asp-for="Description "
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;" onchange="fillField('Description', 'MetaDescription')"></textarea>
                    <span asp-validation-for="Description" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            @* Slug  *@
            <div class="col-md-6">

                <div class="form-group">
                    <label asp-for="Slug" class="control-label">اسلاگ</label>
                    <input type="text" class="form-control" asp-for="Slug">
                    <span asp-validation-for="Slug" class="error"></span>
                </div>

            </div>
            @* MetaDescription *@
            <div class="col-md-6">

                <div class="form-group">
                    <label asp-for="MetaDescription" class="control-label">توضیحات متا</label>
                    <input type="text" class="form-control" asp-for="MetaDescription">
                    <span asp-validation-for="MetaDescription" class="error"></span>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>